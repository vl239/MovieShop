@model List<ApplicationCore.Models.MovieCardModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        @foreach (var movie in Model)
            {
                <div class="col-xl-2 col-lg-3 col-sm-4 col-6">
                    <div class="card mb-4 shadow">
                        @* http://localhost:52342/movies/details/2 *@
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
                            <img src="@movie.PosterUrl" class="img-fluid" alt="@movie.Title" />
                        </a>
                    </div>
                </div>
            } 
    </div>
</div>
